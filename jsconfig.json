{
  "compileOnSave": false,
  "compilerOptions": {
    "checkJs":true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, 
    "baseUrl": "."
  },
  "paths": {
    "*": ["node_modules/*", "types/*"]
  },
  "lib": [
    "dom"
  ],
  "include": ["src"],
  "exclude": ["node_modules", "node","umd"]
}